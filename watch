#!/usr/bin/env bash

# Watch for changes and automatically run `make`. This requires `fswatch` to be
# installed.
#
# Pass -l to enable live reloading.

while getopts ":l" opt
do
    case $opt in
    (l) live_reload=1 ;;
    esac
done

if  [[ live_reload -eq 1 ]]; then
    echo 'Watching for changes to source files (live reload enabled)...'
    fswatch -o -0 --no-defer -l 0.1 src alf_globals.py | xargs -0 -n1 sh -c \
        "make OPTS='$*' && \
        echo 'Requesting live reload from Avara...' && \
        python live_reload.py && \
        echo 'Live reload succeeded.'"
else
    echo 'Watching for changes to source files...'
    fswatch -o -0 --no-defer -l 0.1 src alf_globals.py | xargs -0 -n1 sh -c "make OPTS='$*'"
fi
